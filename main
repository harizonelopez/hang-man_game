#Hang'man game
import random

class Hangman:
    def __init__ (self, word_list, max_attempts = 6):
        self.secret_word = random.choice(word_list)
        self.guessed_letters = []
        self.attempts = max_attempts

    def display_word(self):
        display = ''
        for letter in self.secret_word:
            if letter in self.guessed_letters:
                display += letter
            else:
                display += '_'
        return display

    def get_player_guess(self):
        guess = input("Guess a letter: ")
        return guess.lower()

    def is_guess_correct(self, guessed_letter):
        return guessed_letter in self.secret_word

    def play(self):
        print("\nHelloh! Welcome to the Hang'man game.")
        print("The game bassically entails you choosing a letter for you to match the exact the letters of the secret word chosen by J.A.R.V.I.S  AI")

        while self.attempts > 0:
            print("\nCurrent Word:", self.display_word())
            guess = self.get_player_guess()

            if guess in self.guessed_letters:
                print("Oh sorry, you already guessed the letter. Try again.")
                continue

            self.guessed_letters.append(guess)

            if self.is_guess_correct(guess):
                print("Congrats, your guess was right!")
            else:
                print("Oh sorry, incorrect guess. Please try again.")
                self.attempts -= 1

            if "_" not in self.display_word():
                print("\nCongratulations pall!")
                print("You guessed the correct letters for the secret word: '", self.secret_word, "'\n")
                break
            
        if self.attempts == 0:
            print("\nOh sorry, you ran out of attempts. The secret_word was: '", self.secret_word, "'")
            print("I hope you'll try your best next time, lol.\n")
            
word_list = ["challenge", "hangman", "programming", "python", "javascript", "code", "identity"]
game = Hangman(word_list)
game.play()

